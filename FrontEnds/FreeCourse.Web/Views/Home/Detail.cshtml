
@{
    ViewData["Title"] = "Detail";
}

@model CourseViewModel

<div class="row">
    <div class="col-md-9">
        <img src="@Model.StockPictureUrl" class="card-img-top"/>
        <div class="card-body">
            <h4><span class="badge bg-secondary">Category: @Model.Category.Name</span></h4>
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">@Model.Description</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Price: @Model.Price $</h4>
                <div class="d-grid"><a asp-controller="Basket" asp-action="AddBasketItem" asp-route-courseid="@Model.Id" class="btn btn-primary">Add To Cart</a></div>
            </div>
        </div>
    </div>
</div>

