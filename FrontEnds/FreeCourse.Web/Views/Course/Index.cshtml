@{
    ViewData["Title"] = "Index";
}
@model List<CourseViewModel>


<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Courses</h5>

                <a asp-controller="Course" asp-action="Create" class="btn btn-primary mb-2">Create New Course !</a>

                @if (Model != null && Model.Any())
                {
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Photo</th>
                                <th>Name</th>
                                <th>Price</th>
                                <th>Duration</th>
                                <th>Category</th>
                                <th>Transactions</th>
                            <tr />
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td></td>
                                    <td>@item.Name</td>
                                    <td>@item.Price</td>
                                    <td>@item.Feature.Duration</td>
                                    <td>@item.Category.Name</td>
                                    <td>
                                        <a asp-controller="Course" class="btn btn-success btn-sm" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                        <a asp-controller="Course" class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-info">Could Not Found a Registered Course</div>
                }
            </div>
        </div>
    </div>
</div>





